/* touch */
.touch-main {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 border-bottom:0px;
 width: 100%;
 overflow: hidden
}
.touch-content {
 width: 100%;
 padding: 0px;
 line-height:0px;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 margin-left: -90px
}
.touch-hide {
 background-color: orangered;
 width: 90px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: red;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 margin: 0 0 15px 0;
 border-radius: 5px;
}

.touch-active .touch-content,
.touch-active .touch-hide {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}

.navigator-theme {
  position: absolute;
  text-align: left;
  font-size: 38rpx;
  background: blue;
  top: 50rpx;
}

.navigator-time {
  position: absolute;
  background: green;
  font-size: 38rpx;
  bottom: 50rpx;
}

.navigator-cost {
  text-align: center;
  width: 100rpx;
  background: #fff;
  position: absolute;
  right: 130rpx;
}

.timeline {
  padding: 0;
  list-style: none;
  position: relative;
  z-index: 100;
}

/* The line */
 
.timeline:before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 10px;
  background: #ff5777;
  margin-left: 10rpx;
  z-index: 100;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
} 

.timeline:after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  right: 35%;
  width: 10px;
  background: #fff;
  border-left: 1px #D9D9D9 dashed;
  border-top: 1px #D9D9D9 solid;
  border-bottom: 1px #D9D9D9 solid;
  z-index: 100;
}

