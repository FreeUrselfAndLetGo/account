<!--index.wxml-->
<view class="container">
  <open-data type="userAvatarUrl" class="user-image"></open-data> 
  <view class="weui-input">当前月份花费总额：{{sum}}</view>
  <view class="weui-input">设置上限额度：{{upperlimit}}</view>
  <!-- <button bindtap='showSideBar'>侧边栏</button> -->
  <view wx:if="{{upperlimit===''}}">
    <form bindsubmit="formSubmit">
      <view class="weui-cells__title">请输入上限值</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <textarea name="upperlimit" auto-height value='{{upperlimit}}' />
        </view>
      </view>
      <view class="weui-cells__title">请输入每个月开始的时间</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <textarea name="start" auto-height value='{{start}}' />
        </view>
      </view>
      <view class="btn-area">
        <button class="weui-btn" type="primary" formType="submit">提交</button>
      </view>
    </form>
  </view>
  <view class="button-panel">
    <view>
      <view>
        <image src='../../assets/contact.png' class='navigator-button-small'></image>
      </view>
    </view>
    <view>
      <navigator url='../list/list'>
        <image src="../../assets/list.png" class="navigator-button"></image>
      </navigator>
    </view>
    <view>
      <navigator url='../detail/detail?act=new'>
        <image src="../../assets/add.png" class="navigator-button-important"></image>
      </navigator>
    </view>
    <view>
      <navigator url='../statistics/statistics'>
        <image src="../../assets/data.png" class='navigator-button'></image>
      </navigator>
    </view>
    <view>
      <view>
        <image src='../../assets/setting.png' class='navigator-button-small'></image>
      </view>
    </view>
    
  </view>
  <view class='outside-arc'><view class="an-arc"></view></view>
  
</view>